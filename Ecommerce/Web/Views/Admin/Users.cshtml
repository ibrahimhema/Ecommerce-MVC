@model IEnumerable<BL.ViewModels.AdminDisplayUserViewModel>

@{
    Layout = "~/Views/Shared/_adminPanel.cshtml";
}

<h2>@ViewBag.title</h2>

<table class="table">
    <tr>
        <th>
            Full name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
            @item.FirstName @item.LastName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Make Admin", "RegisterAdminById", new { id = item.ID })
            </td>
        </tr>
    }

</table>
