@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        let grid, dialog;
        function Edit(e) {
            $('#Id').val(e.data.id);

          window.location.href = '@Url.Action("GetProductDetails", "Product")'+'?productId=' + e.data.id;
        }
        function Save() {
            window.location.href = '@Url.Action("CreateProduct", "Product")';

        }
        function Delete(e) {
            if (confirm('Are you sure?')) {
                $.ajax({ url: '/Product/Delete', data: { id: e.data.id }, method: 'POST' })
                    .done(function () {
                        grid.reload();
                    })
                    .fail(function () {
                        alert('Failed to delete.');
                    });
            }
        }
    $(document).ready(function () {

             grid = $('#grid').grid({
                primaryKey: 'Id',
                 dataSource: '/Admin/GetVendors',
                uiLibrary: 'bootstrap4',
                columns: [
                    { field: 'Id', width: 48 },
                    { field: 'FirstName', title: 'Name', sortable: true },
                    { field: 'Email', sortable: true},
                    { field: 'Created_at', title: 'Created At', type: 'date' },
                    { field: 'Products' },
                    { field: 'Active', title: 'Active', type: 'checkbox', width: 90, align: 'center' },
                    { title: '', field: 'Edit', width: 42, type: 'icon', icon: 'fa fa-pencil', tooltip: 'Edit', events: { 'click': Edit } },
                    { title: '', field: 'Delete', width: 42, type: 'icon', icon: 'fa fa-remove', tooltip: 'Delete', events: { 'click': Delete } }
                ],
                pager: { limit: 5, sizes: [2, 5, 10, 20] }
            });
            dialog = $('#dialog').dialog({
                uiLibrary: 'bootstrap4',
                iconsLibrary: 'fontawesome',
                autoOpen: false,
                resizable: false,
                modal: true
            });
            $('#btnAdd').on('click', function () {
                Save();
            });
            $('#btnSave').on('click', Save);
            $('#btnCancel').on('click', function () {
                dialog.close();
            });
            $('#btnSearch').on('click', function () {
                grid.reload({ name: $('#txtName').val(), email: $('#txtEmail').val()});
            });



        });
    </script>


}