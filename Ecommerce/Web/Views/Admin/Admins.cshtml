@model IEnumerable<BL.ViewModels.AdminDisplayUserViewModel>

@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_adminPanel.cshtml";
}

<h2>Admins</h2>

<p>
    @Html.ActionLink("Create New", "RegisterAdmin", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Full name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.FirstName @item.LastName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteAdmin", new { id=item.ID })
        </td>
    </tr>
}

</table>
