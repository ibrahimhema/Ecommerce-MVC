@using BL.ViewModels
@using Web.Views.Shared
@using BL.AppServices
@model VariationOfProductsViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainSiteLayoutView.cshtml";
    Main_CatAppService mainCat = new Main_CatAppService();
    string lang = Session["SelectedCulture"].ToString();



}

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- shop -->
            @foreach (var vendor in Model.vendors)
            {
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img">
                            <img src="~/Content/Imgs/Users/@vendor.Photo" alt="">
                        </div>
                        <div class="shop-body">
                            <h3>@vendor.FirstName @vendor.LastName<br> @ResourceSite.Store</h3>
                            @Html.ActionLink(@ResourceSite.Shop_now, "GetProductByStore", new { vendorID = vendor.ID }, new { @class = "cta - btn" })<i class="fa fa-arrow-circle-right"></i>

                        </div>
                    </div>
                </div>
            }

            <!-- /shop -->
            <!-- shop -->
            <!-- /shop -->
            <!-- shop -->
            <!-- /shop -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">@ResourceSite.New_Products</h3>
                    <div class="section-nav">
                        <ul class="section-tab-nav tab-nav">
                            <li class="active"><a href="@Url.Action("GetAllProducts","MainSite",new { pg=1})">Show All</a></li>
                            @for (int i = 0; i < mainCat.GetAllMain_Category().Count(); i++)
                            {
                               

                                    <li><a data-normalortopsale="N" data-toggle="tab" href="#tab1" onclick="funcGetProductInMainCategory(@mainCat.GetAllMain_Category()[i].Id,this)">@mainCat.GetAllMain_Category()[i].Name</a></li>
                                
                            }

                        </ul>
                    </div>
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab1" class="tab-pane active">
                            <div class="products-slick divAppendedN" data-nav="#slick-nav-1">
                                <!-- product -->
                                @foreach (var product in Model.ProductViewModels)
                                {
                                    Html.RenderAction("ProductPatialView", product);

                                }

                            </div>
                            <div id="slick-nav-1" class="products-slick-nav"></div>
                        </div>
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- Products tab & slick -->
        
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>

<!-- /SECTION -->
<!-- HOT DEAL SECTION -->
