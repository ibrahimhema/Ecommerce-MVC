                            <div>
                                <h3>10</h3>
                                <span>Hours</span>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>34</h3>
                                <span>Mins</span>
                            </div>
                        </li>
                        <li>
                            <div>
                                <h3>60</h3>
                                <span>Secs</span>
                            </div>
                        </li>
                    </ul>
                    <h2 class="text-uppercase">@ResourceSite.hot_deal_this_week</h2>
                    <p>New Collection Up to 50% OFF</p>
                  
                    @Html.ActionLink(@ResourceSite.Shop_now, "Index", "cart", null, new { @class = "primary-btn cta-btn" })
                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /HOT DEAL SECTION -->
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">@ResourceSite.Top_selling</h3>
                    <div class="section-nav">
                        <ul class="section-tab-nav tab-nav">
                            @for (int i = 0; i < mainCat.GetAllMain_Category().Count(); i++)
                            {
                                if (i == 0)
                                {


                                    <li class="active"><a data-normalortopsale="T" data-toggle="tab" href="#tab2" onclick="funcGetProductInMainCategory(@mainCat.GetAllMain_Category()[i].Id,this)">@mainCat.GetAllMain_Category()[i].Name</a></li>
                                }
                                else
                                {

                                    <li><a data-normalortopsale="T" data-toggle="tab" href="#tab2" onclick="funcGetProductInMainCategory(@mainCat.GetAllMain_Category()[i].Id,this)">@mainCat.GetAllMain_Category()[i].Name</a></li>
                                }
                            }


                        </ul>
                    </div>
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab2" class="tab-pane fade in active">
                            <div class="products-slick divAppendedT" data-nav="#slick-nav-2">
                                @{
                                    Model.ProductViewModels.Sort();
                                }
                                @foreach (var topproduct in Model.ProductViewModels)
                                {
                                    Html.RenderAction("ProductPatialView", topproduct);

                                }
                                <!-- product -->
                                <!-- /product -->
                            </div>
                            <div id="slick-nav-2" class="products-slick-nav"></div>
                        </div>
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- /Products tab & slick -->
         

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
