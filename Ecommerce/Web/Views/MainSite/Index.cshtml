<!--this is modal for wishlist-->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ResourceSite.Register_First</h4>
            </div>
            <div class="modal-body">
                <p>@ResourceSite.You_should_be_authonticated.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@ResourceSite.Close</button>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script>

        function funcGetProductInMainCategory(mainCatId, elem) {

            console.log(elem);

            console.log($(elem).data("normalortopsale"));
            if ($(elem).data("normalortopsale") == "N") {
                $.ajax(
                    {
                        type: 'get', //HTTP POST Method
                        url: "@Url.Action("ProductByMainCatIdPartialView", "MainSite")", // Controller/View
                        data: { //Passing data
                            mainCatId: mainCatId //Reading text box values using Jquery
                            , Type: "N"
                        }, success: function (result) {
                            $("#tab1 .slick-track").empty();



                            $('#tab1 .products-slick').slick('slickAdd', result);


                        }, error: function (error) {
                            console.log(error)
                        }
                    });
            } else {

                $.ajax(
                    {
                        type: 'get', //HTTP POST Method
                        url: "@Url.Action("ProductByMainCatIdPartialView", "MainSite")", // Controller/View
                        data: { //Passing data
                            mainCatId: mainCatId //Reading text box values using Jquery
                            , Type: "T"
                        }, success: function (result) {
                            $("#tab2 .slick-track").empty();



                            $('#tab2 .products-slick').slick('slickAdd', result);
                        }, error: function (error) {

                        }
                    });
            }

            //divAppended
        }

    </script>
}

